/**index.wxss**/
page{
background-color:#f2f2f2;
height:100%;
}
.swiperindex {height: 150px;background: #fff;}
.swiperindex image{height: 100%;width:100%;}
.specifications{display: flex; flex-wrap:wrap;justify-content:space-between;margin-top: 8px}
.specifications .shopping{width:49.8%;line-height: 60px;background-color: #fff;border-bottom:1px solid #f2f2f2;display:flex;}
.specifications .shopping text{padding-left: 13px;font-size: 15px;color:#333;font-weight: 600;flex:1;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;text-align:center;}
.specifications .shopping image{width: 45px;height: 45px;margin:8px 10px 0 5px}


.advertisement{line-height: 40px;height: 40px;background-color: #fff;margin-top:8px;display: flex;font-size: 15px;padding-left: 13px;}
.advertisement .newest{color: red;margin-right: 6px;}
.advertisement .newest image{height:20px;width:68px;vertical-align:sub;margin-right: 10px;}
.advertisement .swiper_container{flex:1;height: 40px;}
.indlist{background-color: #fff;margin-top: 8px;padding: 0 13px;}
.indlist .indlist_li{padding: 10px 0;display: flex;border-bottom:1px solid #eee;}
.indlist .indlist_li .imagedata{width: 125px;height:85px;}
.indlist .indlist_li .content{padding-left: 10px;flex:1;}
.indlist .indlist_li .content .content_p{font-size: 15px;color:#333;overflow : hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;width:100%;height: 40px;line-height:19px;}
.indlist .indlist_li .content .content_That{margin-top:28px;display: flex;}
.indlist .indlist_li .content .content_That text{font-size: 13px;color:#666;}
.indlist .indlist_li .content .content_That image{width:22px;height:12px;margin-top:3px;margin-right: 5px}





