/*主容器*/
.stepper {
  width:83px;
  height:25px;
  border-radius: 3px;
  margin-top:9px;
}
/*加号和减号*/
.stepper text {
  float: left;
  width: 25px;
  line-height: 25px;
  text-align: center;
  color:#fff;
  background-color:#f27c27;
}
/*数值*/
.stepper input {
  width: 32px;
  height: 25px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  background-color: #fff;
}
/*普通样式*/
.stepper .normal {
  color:#fff;
}
/*禁用样式*/
.stepper .disable {
  background-color: #dcdcdc;
}
.payment{line-height: 44px;display: flex;position: fixed;bottom: 0;left:0;width: 100%;}
.payment .paymentprice{line-height: 44px;flex: 1;background-color: #fff;padding-left: 13px;font-size: 13px;}
.payment .paymentprice text{font-size: 20px;color:#f27c27;}
.payment .Pay{line-height: 44px;flex: 1;background-color: #f27c27;color: #fff;text-align: center;}